<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="24dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_query_result_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/common_dark"
        android:textSize="@dimen/common_font_size_medium" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@drawable/query_location_result_divider" />

    <TextView
        android:id="@+id/tv_query_result_content"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:textColor="@color/common_blue"
        android:textSize="@dimen/common_font_big" />

</LinearLayout>