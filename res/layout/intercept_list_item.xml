<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:padding="2dp" >

    <ImageView
        android:id="@+id/bt_item_operate"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitCenter"
        android:background="@drawable/op_divider_bg"
        android:src="@drawable/op_clear_item"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_phone_number"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_toLeftOf="@id/bt_item_operate"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/tv_intercept_content"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_toLeftOf="@id/bt_item_operate"
        android:layout_below="@id/tv_phone_number" />

</RelativeLayout>